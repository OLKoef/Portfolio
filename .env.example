# Firebase Configuration for Norwegian Educational File Storage
# Copy this file to .env and fill in your actual values

# Firebase Project Configuration
REACT_APP_FIREBASE_API_KEY=your-api-key-here
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_DATABASE_URL=https://your-project-default-rtdb.europe-west1.firebasedatabase.app
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789012
REACT_APP_FIREBASE_APP_ID=1:123456789012:web:abcdef123456789012

# Norwegian Compliance Settings
REACT_APP_DATA_REGION=europe-west1
REACT_APP_GDPR_COMPLIANT=true
REACT_APP_DATA_LOCATION=EU

# Application Settings
REACT_APP_MAX_FILE_SIZE=209715200
REACT_APP_MAX_TOTAL_UPLOAD=524288000
REACT_APP_ALLOWED_FILE_TYPES=pdf,docx,xlsx,png,jpg,jpeg,dwg,dxf

# Norwegian Educational Settings
REACT_APP_DEFAULT_INSTITUTION=
REACT_APP_SEMESTER_FORMAT=H24,V24,H25,V25
REACT_APP_COURSE_CODE_PATTERN=^[A-Z]{2,5}[0-9]{3,4}$

# Security Settings (for production)
REACT_APP_ENABLE_APP_CHECK=false
REACT_APP_APP_CHECK_SITE_KEY=

# Feature Flags
REACT_APP_ENABLE_ORGANIZATIONS=true
REACT_APP_ENABLE_FILE_SHARING=true
REACT_APP_ENABLE_EXTERNAL_SHARING=true
REACT_APP_ENABLE_RESUMABLE_UPLOADS=true

# Development Settings
REACT_APP_USE_EMULATORS=false
REACT_APP_EMULATOR_HOST=localhost
